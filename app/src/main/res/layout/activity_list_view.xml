<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoPlano">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/verdeTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.Toolbar>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="470dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs"
                android:background="@color/VerdeClaro"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lvOfertas"></ListView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lvDemandas"></ListView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/separador"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/separador"/>
        <ImageButton
            android:id="@+id/filtroAll"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:background="@drawable/all"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/separador"/>
        <ImageButton
            android:id="@+id/filtroAmigos"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/amigos"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/separador"/>
        <ImageButton
            android:id="@+id/filtroInformatica"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ordenador"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/separador"/>
        <ImageButton
            android:id="@+id/filtroClases"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/clases"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/separador"/>
        <ImageButton
            android:id="@+id/filtroMenaje"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/herramientas"/>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/separador"/>

    </LinearLayout>
</LinearLayout>



